@model List<Product>
@{
    ViewBag.Title = "ProductTable";
}

<div id="form">
    <form method="post">
        <input id="search-text" type="text" name="search" />
        <button type="button" id="search-btn">Search</button>
    </form>
    <button type="button" id="add-btn">Add</button>
</div>

    <table id="table-data" class="table table-bordered">
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Category</td>
                <td>Pricate</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>Category</td>
                    <td>@product.Price</td>
                    <td>
                        <button>Edit</button>
                        <button>Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

<div id="action-container">

</div>

<script>
    $("#search-btn").click(function () {
        var searchValue = $("#search-text").val();
        $.ajax({
            type: "GET",
            url: "/Product/ProductTable",
            data: {
                search: searchValue
            }
        }).done(function (response) {
            $('#form').remove();
            $('footer').remove();
            $('#table-data').html(response);
        }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail");
        });
    });

    $("#add-btn").click(function () {
        $.ajax({
            type: "GET",
            url: "/Product/Create",
        }).done(function (response) {
            $('footer').remove();
            $('#action-container').html(response);
        }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail");
        });
    });
</script>

